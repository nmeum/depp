<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{{ .Title }}</title>
		<style>
			{{ template "style.css" }}
		</style>
	</head>
	<body>
		<header>
			<h1>{{ .Title }}</h1>
			<pre>git clone {{ .URL }}/{{ .Title }}.git</pre>

			<section class="branches">
				<h2>Branches:</h2>
				<nav>
					{{ range .Branches }}
						<!-- TODO: set current -->
						<a href="">{{ . }}</a>
					{{ end }}
				</nav>
			</section>
		</header>

		<main>
			{{ template "commits.tmpl" }}

			{{ template "tree.tmpl" }}

			{{ template "readme.tmpl" }}
		</main>
	</body>
</html>
